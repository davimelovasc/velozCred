<header>
  <% if action_name == "search" %>
  <%= link_to 'Voltar', 'javascript:history.back()' %>
  <% end %>
  <%= link_to "Sair", destroy_agent_session_path, method: :delete, class: "float-md-right",style: "margin-right: 2%;", data: {confirm: "Você tem certeza que deseja encerrar sua sessão?"} %>
  <% if current_agent.role == "Adm" %>
  <%= link_to "Atualizar Banco de Dados", "", class: "float-md-right", 'data-toggle': "modal", 'data-target': "#exampleModal"%>
  <% end %>
  <%= link_to "Redefinir Senha", change_password_path(current_agent.id), class: "float-md-right" %>
</header>

<% if current_agent.role == "Adm" %>
<%= form_for Archive.new, url: save_archive_path do |f| %>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Atualização de arquivos do Access</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>É necessário selecionar os dois arquivos, e que os mesmos estejam com os seguintes nomes: "Cadastro.accdb" e "Producao.accdb"</p>

        <div class="form-group">
          <%= f.label :register, "Cadastro.accdb: " %>
          <%= f.file_field :register, class: 'form-control'%>
        </div>

        <div class="form-group">
          <%= f.label :total_production, "Producao.accd: " %>
          <%= f.file_field :total_production, class: 'form-control'%>
        </div>


      </div>
      <div class="modal-footer">
        <%= f.submit 'Atualizar', class: 'btn btn-primary' %>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>

<% end %>

<% end %>
